<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.chot_tv.dawr.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_solid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solid Line"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_dashed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashed Line"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btn_solid" />

    <Button
        android:id="@+id/btn_dotted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dotted Line"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btn_dashed" />
</RelativeLayout>